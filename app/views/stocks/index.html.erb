<h1>在庫管理</h1>
<%= link_to "+新規", new_stock_path, class: "btn btn-outline-success" %>
<table class="table table-sm">
    <tr>
        <th>品目</th>
        <th>数量</th>
        <th></th>
    </tr>
    
    <% @stocks.each do |stock| %>
    
    <tr>
        <td><%= stock.category %></td>
        <td><%= stock.amount %></td>
        <td>
            <%= link_to "詳細", stock_path(stock), class: "btn btn-success" %>
            <%= link_to "編集", edit_stock_path(stock), class: "btn btn-warning" %>
            <%= link_to "削除", stock_path(stock), method: "delete", data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
        </td>
    </tr>
    
    <% end %>
    
</table>